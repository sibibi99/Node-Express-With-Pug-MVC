extends ../layouts/common
block content
  h1 Login

  if errors 
    each error in errors
      .alert.alert-danger= error
  form(action="/auth/login", method="POST")
    .form-group
      label(for="email") Email
      input#name.form-control(name="email", type="text", class="form-group", value= values ? values.email : '' )
    .form-group
      label(for="password") Password
      input#phone.form-control(name="password", type="password", class="form-group", value= values ? values.password : '' )

    button.btn.btn-danger Login