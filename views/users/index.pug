extends ../layouts/common
block content
  h1 
    span User
    a.btn.btn-warning.ml-2(href="/users/create") New
  .d-flex.align-items-center
    form.d-flex.ml-auto(action="/users/search", method="GET", class="d-flex form-group")
      input(type="text", name="q", class="form-control w-50")
      button(class="btn btn-success ml-2") Search
  table.table
    tr
      th Name
      th Phone
      th Action
    each user in users
      tr
        td= user.name
        td= user.phone
        td
         a.btn.btn-danger(href='/users/' + user.id) View